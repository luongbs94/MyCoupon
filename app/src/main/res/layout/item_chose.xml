<?xml version="1.0" encoding="utf-8"?>
<com.yongchun.library.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_2"
    android:background="@color/black"
    android:padding="@dimen/size_2">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_100"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_test" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/picture"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/picture"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delete" />
</com.yongchun.library.widget.SquareRelativeLayout>