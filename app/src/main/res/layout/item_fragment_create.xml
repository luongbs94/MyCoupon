<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/size_3"
    android:layout_marginLeft="@dimen/size_8"
    android:layout_marginRight="@dimen/size_8"
    android:layout_marginTop="@dimen/size_3"
    android:background="@drawable/card_background_white"
    android:orientation="horizontal"
    android:padding="@dimen/size_10"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="6dp">

    <com.ln.views.CircleImageView
        android:id="@+id/img_logo_coupon"
        android:layout_width="@dimen/size_72"
        android:layout_height="@dimen/size_72"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:layout_marginTop="@dimen/size_10"
        android:contentDescription="@null"
        android:src="@drawable/ic_logo_blank"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_5">

        <TextView
            android:id="@+id/txt_company_name_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/name_company"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/txt_price_coupon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/price"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_24sp" />

        <TextView
            android:id="@+id/txt_date_coupon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/time_news"
            android:textSize="@dimen/size_15sp" />

    </LinearLayout>

</LinearLayout>